{
  "compilerOptions": {
    "declaration": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "target": "esnext",
    "pretty": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "lib",
    "declarationDir": "lib",
    "lib": [
      "dom",
      "es6"
    ],
  },
  "include": ["src/**/*"]
}